<%= link_to("<< Back to List", activities_path, :class => 'back-link') %>

<div class="activities edit">
  <h2>Update Activity</h2>

  <%= form_for(@activity) do |f| %>

    <table summary="Activity form fields">
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
      <tr>
        <th>Daily Goal</th>
        <td><%= f.text_field(:goal) %></td>
      </tr>
    <tr>
        <th>Units</th>
        <td><%= f.text_field(:units) %></td>
      </tr>
      <tr>
        <th>Frequency per week</th>
        <td><%= f.text_field(:frequency) %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= f.submit("Update Activity") %>
    </div>

  <% end %>
</div>
